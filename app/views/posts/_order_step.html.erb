<%= form_for post do |pf| %>

  <div class="inputs">
    <%= pf.simple_fields_for :order do |f| %>
      <%= f.error_notification %>
      <div class="inputs">
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :card_type, :collection => [["Visa", "visa"], ["MasterCard", "master"], ["Discover", "discover"], ["American Express", "american_express"]], :required => true %>
        <%= f.input :card_number, :required => true %>
        <%= f.input :card_verification, :required => true, :label => "CVV Value", :input_html => {:size => 4} %>
        <%= f.input :card_expires_on, :required => true, :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :add_month_numbers => true %>
        <%= f.input :address_street %>
        <%= f.input :address_city %>
        <%= f.input :address_state %>
        <%= f.input :address_zip, :input_html => {:size => 8} %>
      </div>
    <% end %>
  </div>
  
  <div class="actions">
    <p><%= pf.submit "Post" %></p>
  </div>
<% end %>

<%= button_to "Preview", post, :name => "back_button" %>