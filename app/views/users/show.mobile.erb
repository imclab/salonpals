<% @title = "#{@user.first_name}'s Account" %>

<table summary="User Account Information">
  <tr>
    <th scope="row">Name</th>
    <td><%=h @user.name %></td>
  </tr>
  <tr>
    <th scope="row">Email</th>
    <td><%=h @user.email %></td>
  </tr>
  <tr>
    <th scope="row">Zip Code</th>
    <td><%=h @user.zip_code %></td>
  </tr>
  <tr>
    <th scope="row">Member For</th>
    <td><%=h time_ago_in_words(@user.created_at) %></td>
  </tr>
  <tr>
    <th scope="row">Preferred Language</th>
    <td><%=h language_name_for(@user.language) %></td>
  </tr>
</table>

<%= link_to 'Edit Your Info', edit_user_path(@user), "data-role" => "button" %>